---
const { currentRoute } = Astro.props;
import { Image } from 'astro:assets';

import logoImage from '@images/logo.png';
import MobileSidebarToggle from '@components/MobileSidebarToggle/MobileSidebarToggle.js';
import TopbarMenu from '@components/TopbarMenu/TopbarMenu.js';
import ThemeSwitcher from '@components/ThemeSwitcher/ThemeSwitcher.js';

const menu = [
  {
    _id: 'ui',
    name: 'UI Components',
    url: '/ui',
    baseURL: '/ui',
  },
  {
    _id: 'framework',
    name: 'Framework',
    url: '/components',
    baseURL: '/components',
  },
  /*
  { name: 'JS Docs', url: '/docs', baseURL: '/docs' },
  { name: 'Themes', url: '/themes', baseURL: '/themes' },
  { name: 'Tutorials', url: '/tutorials', baseURL: '/tutorials' },
  { name: 'Showcase', url: '/showcase', baseURL: '/showcase'},
  { name: 'For Designers', url: '/designers', baseURL: '/designers'},
  */
];

import './TopBar.css';
---
<topbar transition:persist>
  <span class="left">
    <a class="logo" href="/">
      <Image src={logoImage} alt="Logo" height="35" loading="eager"></Image>
      <span class="name">
        Semantic UI
      </span>
    </a>
  </span>
  <MobileSidebarToggle client:load></MobileSidebarToggle>
  <TopbarMenu
    client:load
    menu={menu}
    activeURL={Astro.url.pathname}
  ></TopbarMenu>
  <ThemeSwitcher client:load transition:name="theme"></ThemeSwitcher>
</topbar>
