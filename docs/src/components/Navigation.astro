---
const { currentRoute } = Astro.props;
import './Navigation.css';
import { SidebarMenu } from'@components/SidebarMenu/SidebarMenu.js';

---
<navigation>
	<navSearch class="ui inverted icon input">
		<input type="text" placeholder="Search...">
		<i class="search icon"></i>
	</navSearch>
	<SidebarMenu client:load></SidebarMenu>
  <script>
    import { getNavMenu } from '@helpers/get-nav-menu.js';
    import { $ } from '@semantic-ui/query';
    const el = $('sidebar-menu')[0];
    el.menu = getNavMenu();
    console.log(el.menu);
    $('sidebar-menu').initialize({
      menu: getNavMenu()
    });
  </script>
</navigation>
