---
import {
  UIButton,
  UIContainer,
  UIIcon,
  UIMenu,
  MenuItem,
  UIInput,
  UIRail,
} from '@semantic-ui/core';
import { $ } from '@semantic-ui/query';

const { name, attributes } = Astro.props;
---

{name === 'UIButton' && (
  <UIButton {...attributes} client:load>
    <slot />
  </UIButton>
)}
{name === 'UIContainer' && (
  <UIContainer {...attributes}>
    <slot />
  </UIContainer>
)}
{name === 'UIIcon' && (
  <UIIcon {...attributes} />
)}
{name === 'UIInput' && (
  <UIInput {...attributes} />
)}
{name === 'UIRail' && (
  <UIRail {...attributes}>
    <slot />
  </UIRail>
)}
{name === 'UIMenu' && (
  <UIMenu {...attributes} client:load>
    <slot />
  </UIMenu>
)}
{name === 'MenuItem' && (
  <MenuItem {...attributes} client:load>
    <slot />
  </MenuItem>
)}
