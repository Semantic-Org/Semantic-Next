---
import { UIButton, UIIcon, UIMenu, MenuItem } from '@semantic-ui/core';
import { $ } from '@semantic-ui/query';

const { name, attributes } = Astro.props;
---

{name === 'UIButton' && (
  <UIButton {...attributes} client:load>
    <slot />
  </UIButton>
)}
{name === 'UIIcon' && (
  <UIIcon {...attributes} />
)}
{name === 'UIMenu' && (
  <UIMenu {...attributes} client:load>
    <slot />
  </UIMenu>
)}
{name === 'MenuItem' && (
  <MenuItem {...attributes} client:load>
    <slot />
  </MenuItem>
)}
