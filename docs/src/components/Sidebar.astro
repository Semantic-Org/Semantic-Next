---
const { currentRoute } = Astro.props;
import './Sidebar.css';
import SidebarMenu from'@components/SidebarMenu/SidebarMenu.js';
import { getNavMenu } from '@helpers/get-nav-menu.js';

const menu = await getNavMenu('framework');
---
<sidebar transition:persist id="sidebar" popover>
	<navSearch class="ui inverted icon input">
		<input type="text" placeholder="Search...">
		<i class="search icon"></i>
	</navSearch>
	<SidebarMenu
		client:load
    menu={menu}
    activeURL={Astro.url.pathname}
  />
</sidebar>
