---
<sidebar transition:persist id="sidebar" popover="manual">
  <slot/>
	<NavMenu
		client:load
    menu={menu}
    use-accordion=true
    expand-all={expandAll || true}
    activeurl={Astro.url.pathname}
  />
  <slot name="after"/>
</sidebar>
