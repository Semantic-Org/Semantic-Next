---
import '../css/layers.css';
import Body from '../layouts/Body.astro';
import TopBar from '@components/TopBar.astro';
import NavMenu from '@components/NavMenu/NavMenu.js';
import SiteMobileMenu from '@components/SiteMobileMenu.astro';
import './Layout.css';
import './Homepage.css';
let { title, description, searchMeta } = Astro.props;
---
<Body title={title} description={description} searchMeta={searchMeta} >
  <TopBar floating showThemeSwitcher=false transition:persist transition:name="top-bar" />
  <page data-pagefind-body>
    <slot></slot>
  </page>
  <SiteMobileMenu transition:persist transition:name="mobile-menu"></SiteMobileMenu>
</Body>
