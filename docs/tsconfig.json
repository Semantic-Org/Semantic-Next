{
  "extends": "astro/tsconfigs/base",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@examples/*": ["src/examples/*"],
      "@helpers/*": ["src/helpers/*"],
      "@javascript/*": ["src/javascript/*"],
      "@images/*": ["src/images/*"]
    }
  }
}
