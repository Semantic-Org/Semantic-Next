{
  "name": "@semantic-ui/core",
  "version": "0.0.2",
  "title": "Semantic UI Next",
  "description": "Semantic empowers designers and developers by creating a shared vocabulary for UI.",
  "homepage": "http://www.semantic-ui.com",
  "author": "Jack Lukic <jack@semantic-ui.com>",
  "main": "src/semantic-ui.js",
  "module": "src/semantic-ui.js",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**",
    "src/**"
  ],
  "peerDependencies": {
    "lit": "^3.1.2"
  },
  "scripts": {
    "build": "wireit",

    "dev": "wireit",
    "build:docs": "wireit",

    "serve": "wireit",
    "test:case": "wireit",

    "publish": "wireit",
    "publish:all": "wireit",

    "prettify": "wireit",
    "test": "wireit",
    "test:ui": "wireit",

    "ci:coverage": "wireit",
    "ci:test": "wireit",
    "ci:test:unit": "wireit",
    "ci:test:browser": "wireit",

    "format": "wireit",
    "prepare": "wireit"
  },
  "dependencies": {
    "@semantic-ui/component": "^0.0.2",
    "@semantic-ui/utils": "^0.0.2",
    "@semantic-ui/specs": "^0.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitest/browser": "^1.5.2",
    "@vitest/coverage-istanbul": "^1.5.2",
    "@vitest/ui": "^1.5.2",
    "chalk": "^5.3.0",
    "dprint": "^0.45.1",
    "esbuild": "^0.20.2",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "opencommit": "^3.0.12",
    "underscore": "^1.13.6",
    "vitest": "^1.5.2",
    "wireit": "^0.14.4"
  },
  "ciDependencies": {
    "axios": "^1.6.8",
    "decompress": "^4.2.1"
  },
  "workspaces": [
    "packages/*",
    "docs/*",
    "examples/*"
  ],
  "wireit": {
    "build": {
      "command": "node ./tasks/build.js"
    },
    "watch": {
      "command": "node ./tasks/watch.js",
      "service": true
    },
    "publish": {
      "command": "npm publish",
      "dependencies": [
        "build"
      ]
    },
    "publish:all": {
      "dependencies": [
        "publish",
        "./packages/component:publish",
        "./packages/query:publish",
        "./packages/reactivity:publish",
        "./packages/specs:publish",
        "./packages/templating:publish",
        "./packages/utils:publish"
      ]
    },
    "dev": {
      "dependencies": [
        "./docs:dev"
      ]
    },
    "build:docs": {
      "dependencies": [
        "./docs:build"
      ]
    },
    "test:case": {
      "command": "node ./tasks/test-case.js"
    },
    "serve": {
      "command": "node ./tasks/serve.js",
      "service": true
    },
    "format": {
      "command": "npx dprint fmt"
    },
    "test": {
      "command": "vitest --c tests/configs/vitest/vitest.config.js",
      "service": true
    },
    "test:ui": {
      "command": "vitest --ui --c tests/configs/vitest/vitest-ui.config.js",
      "service": true
    },
    "ci:coverage": {
      "command": "vitest --c tests/configs/vitest/ci-coverage.config.js"
    },
    "ci:test": {
      "command": "vitest --c tests/configs/vitest/ci-test-all.config.js"
    },
    "ci:test:unit": {
      "command": "vitest --c tests/configs/vitest/ci-test-unit.config.js"
    },
    "ci:test:browser": {
      "command": "vitest --c tests/configs/vitest/ci-test-browser.config.js"
    },
    "prettify": {
      "command": "prettierx ./ --write --ignore-unknown"
    },
    "prepare": {
      "command": "husky"
    }
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "lint-staged": {
    "**/*.js": "npx dprint fmt"
  }
}
