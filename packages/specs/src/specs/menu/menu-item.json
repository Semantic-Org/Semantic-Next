    },
    {
      "name": "Href",
      "type": "string",
      "attribute": "href",
      "description": "can specify a link"
    },
    {
      "name": "Value",
      "type": "string",
      "attribute": "value",
      "description": "can specify a value"
    }
  ],
  "states": [
    {
      "name": "Hover",
      "attribute": "hover",
      "description": "hovered"
    },
    {
      "name": "Focus",
      "attribute": "focused",
      "description": "focused by the keyboard"
    },
    {
      "name": "Active",
      "attribute": "active",
      "description": "activated"
    },
    {
      "name": "Disabled",
      "attribute": "disabled",
      "description": "disable interactions"
    }
  ]
}
