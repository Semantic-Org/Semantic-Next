{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "compilerOptions": {
        "noImplicitAny": false
      }
    }
  ]
}
