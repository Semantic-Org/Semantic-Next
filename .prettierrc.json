{
  "semi": true,
  "printWidth": 100,
  "singleQuote": true,
  "offsetTernaryExpressions": true,
  "spaceBeforeFunctionParen": false,
  "importFormatting": "oneline",
  "trailingComma": "es5",
  "breakBeforeElse": true,

  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "singleQuote": false,
        "printWidth": 120
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
